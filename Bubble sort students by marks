/* file: student_bubble.c */
#include <stdio.h>
#include <string.h>

typedef struct {
    int roll;
    char name[50];
    float marks;
} Student;

int main() {
    int n;
    printf("Number of students: ");
    if(scanf("%d", &n)!=1) return 0;
    Student a[n];
    for(int i=0;i<n;i++){
        printf("Roll, Name, Marks for student %d: ", i+1);
        scanf("%d", &a[i].roll);
        scanf(" %[^\n]", a[i].name);
        scanf("%f", &a[i].marks);
    }
    // Bubble sort descending by marks (change comparison for ascending)
    for(int i=0;i<n-1;i++){
        for(int j=0;j<n-1-i;j++){
            if(a[j].marks < a[j+1].marks){
                Student tmp = a[j]; a[j] = a[j+1]; a[j+1] = tmp;
            }
        }
    }
    printf("\nSorted by marks (high -> low):\n");
    for(int i=0;i<n;i++){
        printf("%d\t%s\t%.2f\n", a[i].roll, a[i].name, a[i].marks);
    }
    return 0;
}
