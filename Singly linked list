/* file: sll_basic.c */
#include <stdio.h>
#include <stdlib.h>

typedef struct Node {
    int data;
    struct Node *next;
} Node;

Node* head = NULL;

void insertEnd(int x){
    Node *n = malloc(sizeof(Node)); n->data = x; n->next = NULL;
    if(!head) head = n;
    else {
        Node *t=head;
        while(t->next) t=t->next;
        t->next = n;
    }
}

void deleteValue(int x){
    Node *t=head, *p=NULL;
    while(t && t->data!=x){ p=t; t=t->next; }
    if(!t) { printf("Not found\n"); return; }
    if(!p) head = t->next;
    else p->next = t->next;
    free(t);
}

void display(){
    Node *t=head;
    if(!t){ printf("Empty\n"); return; }
    while(t){ printf("%d ", t->data); t=t->next; }
    printf("\n");
}

int main(){
    int ch, x;
    while(1){
        printf("\n1-insert 2-delete 3-display 0-exit\nChoice: ");
        if(scanf("%d",&ch)!=1) break;
        if(ch==0) break;
        switch(ch){
            case 1: printf("val: "); scanf("%d",&x); insertEnd(x); break;
            case 2: printf("val: "); scanf("%d",&x); deleteValue(x); break;
            case 3: display(); break;
            default: printf("Invalid\n");
        }
    }
    return 0;
}
