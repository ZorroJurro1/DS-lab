/* file: queue_array.c */
#include <stdio.h>
#include <stdlib.h>
#define MAX 100

int queue[MAX];
int front = 0, rear = -1, size = 0;

int isFull(){ return size == MAX; }
int isEmpty(){ return size == 0; }

void insert(int x){
    if(isFull()){ printf("Queue full\n"); return; }
    rear = (rear + 1) % MAX;
    queue[rear] = x;
    size++;
}

int deleteQ(){
    if(isEmpty()){ printf("Queue empty\n"); return -1; }
    int val = queue[front];
    front = (front + 1) % MAX;
    size--;
    return val;
}

int peek(){ if(isEmpty()){ printf("Empty\n"); return -1; } return queue[front]; }

void display(){
    if(isEmpty()){ printf("Empty\n"); return; }
    for(int i=0, idx=front; i<size; i++, idx=(idx+1)%MAX){
        printf("%d ", queue[idx]);
    }
    printf("\n");
}

int main(){
    int choice, val;
    while(1){
        printf("\n1-insert 2-delete 3-peek 4-display 5-isEmpty 6-isFull 0-exit\nChoice: ");
        if(scanf("%d",&choice)!=1) break;
        if(choice==0) break;
        switch(choice){
            case 1: printf("Value: "); scanf("%d",&val); insert(val); break;
            case 2: printf("Deleted: %d\n", deleteQ()); break;
            case 3: printf("Front: %d\n", peek()); break;
            case 4: display(); break;
            case 5: printf(isEmpty()?"Empty\n":"Not empty\n"); break;
            case 6: printf(isFull()?"Full\n":"Not full\n"); break;
            default: printf("Invalid\n");
        }
    }
    return 0;
}
