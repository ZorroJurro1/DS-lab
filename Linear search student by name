/* file: student_linear_search.c */
#include <stdio.h>
#include <string.h>

typedef struct {
    int roll;
    char name[50];
    float marks;
} Student;

int main(){
    int n;
    printf("Number of students: ");
    if(scanf("%d",&n)!=1) return 0;
    Student a[n];
    for(int i=0;i<n;i++){
        printf("Roll, Name, Marks for student %d: ", i+1);
        scanf("%d", &a[i].roll);
        scanf(" %[^\n]", a[i].name);
        scanf("%f", &a[i].marks);
    }
    char key[50];
    printf("Enter name to search: ");
    scanf(" %[^\n]", key);
    for(int i=0;i<n;i++){
        if(strcmp(a[i].name, key) == 0){
            printf("Found: Roll=%d, Marks=%.2f\n", a[i].roll, a[i].marks);
            return 0;
        }
    }
    printf("Student not found\n");
    return 0;
}
